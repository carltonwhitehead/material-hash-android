<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/nearFruitSaladGreen</item>
        <item name="android:colorPrimaryDark">@color/nearLaPalmaGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/nearPortlandOrange</item>
        <item name="android:textColorPrimary">@color/nearNero</item>
        <item name="android:textColorSecondary">@color/nearDoveGrey</item>
        <item name="android:divider">@color/nearLoblollySilver</item>
        <item name="android:spinnerItemStyle">@style/AppTheme.Widget.SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/AppTheme.Widget.SpinnerDropdownItem</item>
    </style>

    <style name="AppTheme.Widget.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.Widget.SpinnerDropdownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light">

    </style>
</resources>